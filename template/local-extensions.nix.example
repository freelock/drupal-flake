# Example local extensions file
# To use: 
# 1. Create a 'nix' directory in your project root
# 2. Copy this file to nix/local-extensions.nix
# 3. Customize the packages below as needed
# 4. The refresh-flake script will not touch the nix directory

{ pkgs, lib, system }:

let
  # WeasyPrint Python environment for PDF generation
  weasyPrintEnv = pkgs.python3.withPackages (ps: with ps; [ weasyprint pillow cffi html5lib ]);
in
{
  # Additional PHP extensions to include in PHP-FPM
  extraPhpExtensions = [
    # Example: add Redis extension
    # pkgs.php83Extensions.redis
    # pkgs.php83Extensions.memcached
  ];
  
  # Additional Nix packages to include in the dev shell
  extraNixPackages = with pkgs; [
    # Example: add Node.js and development tools
    # nodejs_20
    # yarn
    # git
    # curl
  ];
  
  # Custom tools/scripts to include in the dev shell
  customTools = with pkgs; [
    # WeasyPrint Python environment for PDF generation
    weasyPrintEnv
    
    # Create a weasyprint wrapper script
    (writeShellScriptBin "weasyprint" ''
      exec python3 -m weasyprint "$@"
    '')
    
    # Create a test script to verify WeasyPrint installation
    (writeShellScriptBin "test-weasyprint" ''
      echo "Testing WeasyPrint installation..."
      echo "WeasyPrint version:"
      python3 -c "import weasyprint; print(weasyprint.__version__)"
      echo "WeasyPrint binary location:"
      which weasyprint || echo "weasyprint wrapper available"
      echo "Creating test PDF..."
      echo '<html><body><h1>WeasyPrint Test</h1><p>If you can see this, WeasyPrint is working!</p></body></html>' > /tmp/test.html
      weasyprint /tmp/test.html /tmp/test-weasyprint.pdf && echo "PDF created successfully!" || echo "PDF creation failed"
      ls -la /tmp/test-weasyprint.pdf 2>/dev/null || echo "PDF file not found"
      echo "Test complete!"
    '')
    
    # Example: include other tools from your pipelines repo
    # You can reference the repo as a flake input or copy scripts locally
    
    # Option 1: Simple script wrapper
    # (writeScriptBin "my-pipeline-tool" ''
    #   #!${bash}/bin/bash
    #   ${nodejs_20}/bin/node /path/to/your/script.js "$@"
    # '')
    
    # Option 2: Full project derivation
    # (stdenv.mkDerivation {
    #   name = "pipeline-tools";
    #   src = fetchgit {
    #     url = "https://git.freelock.com/freelock/pipelines";
    #     rev = "main";
    #     sha256 = "...";
    #   };
    #   buildInputs = [ nodejs_20 ];
    #   installPhase = ''
    #     mkdir -p $out/bin
    #     cp -r . $out/lib/pipeline-tools
    #     # Create wrapper scripts for each tool
    #     for script in *.js; do
    #       makeWrapper ${nodejs_20}/bin/node $out/bin/''${script%.js} \
    #         --add-flags "$out/lib/pipeline-tools/$script"
    #     done
    #   '';
    # })
  ];
  
  # Additional paths to add to PHP-FPM PATH environment
  # This ensures PHP can access tools like WeasyPrint
  extraPaths = [
    "${weasyPrintEnv}/bin"
  ];
}